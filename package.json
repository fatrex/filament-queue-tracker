{
    "private": true,
    "scripts": {
        "dev:styles": "npx tailwindcss -i resources/css/plugin.css -o resources/dist/filament-jobs-monitor.css --postcss --watch",
        "dev:scripts": "esbuild resources/js/plugin.js --bundle --sourcemap=inline --outfile=resources/dist/filament-jobs-monitor.js --watch",
        "build:styles": "npx tailwindcss -i resources/css/plugin.css -o resources/dist/filament-jobs-monitor.css --postcss --minify && npm run purge",
        "build:scripts": "esbuild resources/js/plugin.js --bundle --minify --outfile=resources/dist/filament-jobs-monitor.js",
        "purge": "filament-purge -i resources/dist/filament-jobs-monitor.css -o resources/dist/filament-jobs-monitor.css",
        "dev": "npm-run-all --parallel dev:*",
        "build": "npm-run-all build:*"
    },
    "devDependencies": {
        "@awcodes/filament-plugin-purge": "^1.1.2",
        "autoprefixer": "^10.4.21",
        "esbuild": "^0.25.10",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.5.6",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "tailwindcss": "^4.1.13"
    }
}
